{% extends 'base.html.twig' %}

{% block title %}Modifier un détachement{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{ asset('asset/css/angifode.css') }}"/>{% endblock %}

{% block body %}
    <div class="container">
        <div class="h4 text-success">Apporter des modifications sur le détachement de l'agent {{ detache.noms }}({{ detache.matricule }})</div>
        {% for message in app.session.flashBag.get('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
        <hr>
        {{ form_start(form) }}
            <div class="row">
                <div class="col-5 me-3">
                    <fieldset>
                        <legend class="bg-dark text-center text-white">
                            Informations sur l'agent
                        </legend>
                        <hr>
                        <div class="row mt-4">
                            <div class="col-7">{{ form_row(form.matricule) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-7">{{ form_row(form.noms) }}</div>
                            <div class="col-5">{{ form_row(form.telephone) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.dateNaissance) }}</div>
                            <div class="col">{{ form_row(form.dateIntegration) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.refActeInt) }}</div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-5 ms-3">
                    <fieldset>
                        <legend class="bg-dark text-center text-white">Informations sur le détachement</legend>
                        <hr>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.typeActeDet) }}</div>
                            <div class="col ">{{ form_row(form.refActeDet) }}</div>
                            <div class="col">{{ form_row(form.dateActeDet) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.ministere) }}</div>
                            <div class="col">{{ form_row(form.gradeDet) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.classeDet) }}</div>
                            <div class="col">{{ form_row(form.echelonDet) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.dateDet) }}</div>
                            <div class="col">{{ form_row(form.datePriseService) }}</div>
                            <div class="col">{{ form_row(form.dateSuspension) }}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">{{ form_row(form.organisme) }}</div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-4 mt-4">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check"></i>
                        <span class="fw-bolder"> Enregistrer les modifications</span>
                    </button>
                    <a class="btn btn-dark btn-sm" href="{{ path('agent_detache_list') }}">
                        <i class="fa fa-window-restore" aria-hidden="true"></i>
                        <span class="fw-bolder"> Annuler les modifications</span>
                    </a>
                </div>
                <div class="col-2 mt-4 ms-auto">
                    <a title="Supprimer la cotisation" data-bs-toggle="modal" data-bs-target="#modal1" class="btn btn-danger btn-sm">
                        <i class="fa fa-times text-danger"></i> Supprimer ce détachement
                    </a>
                    <div class="modal fade text-start" id="modal1" data-bs-backdrop="static">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Suppression d'un détachement !</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true"></span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Voulez-vous réellement annuler le détachement de {{ detache.noms }}({{ detache.matricule }})
                                        dans l'organisme {{ detache.organisme.sigle }} ?</p>
                                </div>
                                <div class="modal-footer">
                                    <a class="btn btn-danger" href="{{ path('agent_detache_edit', {'id': detache.id}) }}">Oui, Supprimer</a>
                                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Non, Annuler</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
