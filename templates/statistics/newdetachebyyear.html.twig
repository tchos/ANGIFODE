{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/css/dataTables.bootstrap4.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid my-4">
        <hr>
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-university fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.nbOrganismes }} organismes parapublics</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="col">
                    <div class="card bg-success text-white mb-3 text-center">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <i class="fas fa-address-book fa-3x"></i>
                                </div>
                                <div class="col-8">
                                    <h4 class="card-title">{{ stats.nbAgentsDetaches }} agents publics détachés</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.nbUsers }} utilisateurs inscrits</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Total des sommes réversées par année
                        <a href="{{ path('totalsaryear') }}" class="btn btn-sm btn-primary d-block row fw-bolder fw-bolder">Voir</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Total des sommes réversées par structure sur une année donnée
                        <a href="{{ path('totalsaryearorganisme') }}" class="btn btn-sm btn-primary d-block row fw-bolder">Voir</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Total des sommes réversées par structure et par trimestre sur une année donnée
                        <a href="#" class="btn btn-sm btn-primary d-block row fw-bolder">Voir</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Liste des structures qui n'ont pas encore reversé sur l'année en cours
                        <a href="{{ path('anypayinyear') }}" class="btn btn-sm btn-primary d-block row fw-bolder">Voir</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Liste des structures qui n'ont jamais réversé
                        <a href="#" class="btn btn-sm btn-primary d-block row fw-bolder">Voir</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Effectif des agents détachés par structure
                        <a href="#" class="btn btn-sm btn-primary d-block row fw-bolder">Voir</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center fw-bolder">
                        Effectif des nouveaux détachés par année
                        <a href="#" class="btn btn-sm btn-primary d-block row fw-bolder">Voir</a>
                    </li>
                </ul>
            </div>
            <div class="col">
                <h4>Effectif des agents nouvellement détachés par année</h4>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="nbredetache" class="table table-striped table-hover">
                                <thead>
                                <tr class="table-primary">
                                    <th class="text-center fw-bolder">ID</th>
                                    <th class="ps-5 fw-bolder">ANNEE DE DETACHEMENT</th>
                                    <th class="text-end fw-bolder">EFFECTIF DES DETACHES</th>
                                    <th class="text-center fw-bolder">ACTION</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set i = 1 %}
                                {% for detache in newdetachebyyear %}
                                    <tr>
                                        <td class="text-center fw-bolder pe-5">{{ i }}</td>
                                        <td class="ps-5 fw-bolder">{{ detache.annee_detachement }}</td>
                                        <td class="text-end pe-5 fw-bolder">{{ detache.nbreDetaches | number_format(0,'.',' ') }}</td>
                                        <td class="text-center fw-bolder pe-4">
                                            <a class="text-decoration-none" target="_blank" title="Voir les personnes détachées en {{ detache.annee_detachement }}"
                                               href="{{ path('agent_detache_year', {'year': detache.annee_detachement}) }}">
                                                <i class="fa fa-eye" aria-hidden="true"></i> Voir la liste
                                            </a>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('asset/js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('asset/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('asset/js/popper.min.js') }}"></script>
    <script src="{{ asset('asset/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('asset/js/dataTables.bootstrap4.min.js') }}"></script>

    <script src="{{ asset('asset/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('asset/js/jszip.min.js') }}"></script>
    <script src="{{ asset('asset/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('asset/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('asset/js/buttons.html5.min.js') }}"></script>

    <script>
        $(document).ready(function(){
            var theDataTable = $('#nbredetache').DataTable({
                dom: 'Blfrtip',
                buttons: [
                    {
                        extend: 'copy',
                        text:      '<span class="fw-bolder">Copier</span>',
                        titleAttr: 'Copier les données du tableau',
                        className: 'btn btn-dark btn-sm',
                    },
                    {
                        extend: 'pdf',
                        text:      '<span class="fw-bolder">PDF</span>',
                        titleAttr: 'Exporter les données du tableau au format pdf',
                        className: 'btn btn-dark btn-sm',
                    },
                    {
                        extend: 'excel',
                        text:      '<span class="fw-bolder">MS Excel</span>',
                        titleAttr: 'Exporter les données du tableau au format excel',
                        className: 'btn btn-dark btn-sm',
                    }
                ]
            });
        });
    </script>
{% endblock %}
