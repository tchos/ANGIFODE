{% extends 'base.html.twig' %}

{% block title %}Période d'évaluation{% endblock %}

{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{ asset('asset/css/angifode.css') }}"/>{% endblock %}

{% block body %}
    <div class="container">
        <div class="h4 text-success">Dette sociale de {{ organisme.sigle }}: renseignez les date de début et de fin de la période</div>
        <hr>
        {{ form_start(form) }}
        <div class="row mt-4">
            <div class="col">{{ form_row(form.dateDebut) }}</div>
            <div class="col">{{ form_row(form.dateFin) }}</div>
        </div>
        <button type="submit" class="btn btn-success btn-sm mt-4">
            <i class="fas fa-check"></i>
            <span class="fw-bolder">Evaluer la dette</span>
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
