{% extends 'base.html.twig' %}

{% block title %}Liste des agents détachés{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/css/dataTables.bootstrap4.min.css') }}">
    {% if not is_granted('ROLE_ADMIN') %}
        <link rel="stylesheet" href="{{ asset('asset/css/angifode.css') }}"/>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="h4 text-success">
            Résultat de l'évaluation de la dette sociale de l'organisme {{ organisme.sigle }}
        </div>
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <hr>
        <div class="row">
            <div class="col">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    ORGANISME :
                    <span class="badge bg-dark rounded-pill fw-bolder">{{ organisme.sigle }}</span>
                </li>
            </div>
            <div class="col">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    PERIODE :
                    <span class="badge bg-dark rounded-pill fw-bolder">Du
                        {{ dateDebut }} au
                        {{ dateFin }}
                    </span>
                </li>
            </div>
            <div class="col">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    SOMME A REVERSER :
                    <span class="badge bg-success rounded-pill fw-bolder">
                        {{ totalSar | number_format(0,'.',' ')}} FCFA
                    </span>
                </li>
            </div>
        </div>
        <h4 class="mt-5">Liste des agents publics détachés concernés par la dette sociale (ESD) </h4>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="agentsdetaches" class="table table-striped table-hover mt-4">
                        <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>MATRICULE</th>
                            <th class="text-end pe-5">SOMME A REVERSER</th>
                            <th class="text-center">ACTION</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for sar in dataSar %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ i }}</td>
                                <td class="text-end pe-5">{{ sar | number_format(0,'.',' ') }}</td>
                                <td class="text-center">
                                    <a title="Détails de l'évaluation la dette sociale de l'agent {{ i }}"
                                       href="{{ path('esd_agent_details',
                                           {'id': 5,
                                               'dateDebut': dateDebut,
                                               'dateFin': dateFin}) }}">
                                        <span>Détails</span>
                                    </a>
                                </td>
                            </tr>
                            {% set i = i + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('asset/js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('asset/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('asset/js/popper.min.js') }}"></script>
    <script src="{{ asset('asset/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('asset/js/dataTables.bootstrap4.min.js') }}"></script>

    <script src="{{ asset('asset/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('asset/js/jszip.min.js') }}"></script>
    <script src="{{ asset('asset/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('asset/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('asset/js/buttons.html5.min.js') }}"></script>

    <script>
        $(document).ready(function(){
            var azemDataTable = $('#agentsdetaches').DataTable({
                dom: 'Blfrtip',
                buttons: [
                    {
                        extend: 'copy',
                        text:      '<i class="fas fa-copy" style="font-size:25px;color:blue;"></i>',
                    },
                    {
                        extend: 'pdf',
                        text:      '<i class="fas fa-file-pdf" style="font-size:25px;color:red;"></i>',
                        exportOptions: {
                            columns: [0,1,2] // Column index which needs to export
                        }
                    },
                    {
                        extend: 'csv',
                        text:      '<i class="fas fa-file-alt" style="font-size:25px;color:black;"></i>',
                    },
                    {
                        extend: 'excel',
                        text:      '<i class="fas fa-file-excel" style="font-size:25px;color:darkgreen;"></i>',
                    }
                ]
            });
        });
    </script>
{% endblock %}