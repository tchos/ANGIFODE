{% extends 'base.html.twig' %}

{% block title %}Liste des agents détachés{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/css/dataTables.bootstrap4.min.css') }}">
    {% if not is_granted('ROLE_ADMIN') %}
        <link rel="stylesheet" href="{{ asset('asset/css/angifode.css') }}"/>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col"><h4>Détails de l'évaluation de la dette sociale de l'agent {{ agentDetache.noms }} ({{ agentDetache.matricule }})</h4></div>
            <div class="col-3"><span class="badge bg-success fs-5 fw-bolder">Total à reverser: {{ totalSar | number_format(0,'.',' ') }} FCFA</span></div>
        </div>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="agentsdetaches" class="table table-striped table-hover mt-4">
                        <thead>
                        <tr class="table-dark">
                            <th class="text-center">ID</th>
                            <th class="text-center">Date début</th>
                            <th class="text-center">Date fin</th>
                            <th class="text-center">Indice</th>
                            <th class="text-end pe-5">Salaire de base</th>
                            <th class="text-end pe-5">Part salariale</th>
                            <th class="text-end pe-5">Part patronale</th>
                            <th class="text-end pe-5">Somme à reverser</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for periode in sar %}
                            {# {{ dump(periode) }} #}
                            <tr>
                                <td class="text-center">{{ i }}</td>
                                <td class="text-center">{{ periode.dateDebut | format_datetime('short', 'none', locale='fr') }}</td>
                                <td class="text-center">{{ periode.dateFin | format_datetime('short', 'none', locale='fr') }}</td>
                                <td class="text-center">{{ periode.indice }}</td>
                                <td class="text-end pe-5">{{ periode.sb | number_format(0,'.',' ') }} FCFA</td>
                                <td class="text-end pe-5">{{ periode.partSalariale | number_format(0,'.',' ') }} FCFA</td>
                                <td class="text-end pe-5">{{ periode.partPatronale | number_format(0,'.',' ') }} FCFA</td>
                                <td class="text-end fw-bolder pe-5">{{ periode.sar | number_format(0,'.',' ') }} FCFA</td>
                            </tr>
                            {% set i = i + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('asset/js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('asset/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('asset/js/popper.min.js') }}"></script>
    <script src="{{ asset('asset/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('asset/js/dataTables.bootstrap4.min.js') }}"></script>

    <script src="{{ asset('asset/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('asset/js/jszip.min.js') }}"></script>
    <script src="{{ asset('asset/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('asset/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('asset/js/buttons.html5.min.js') }}"></script>

    <script>
        $(document).ready(function(){
            var theDataTable = $('#agentsdetaches').DataTable({
                dom: 'Blfrtip',
                buttons: [
                    {
                        extend: 'copy',
                        text:      '<i class="fas fa-copy" style="font-size:25px;color:blue;"></i>',
                    },
                    {
                        extend: 'pdf',
                        text:      '<i class="fas fa-file-pdf" style="font-size:25px;color:red;"></i>',
                        exportOptions: {
                            columns: [0,1,2] // Column index which needs to export
                        }
                    },
                    {
                        extend: 'csv',
                        text:      '<i class="fas fa-file-alt" style="font-size:25px;color:black;"></i>',
                    },
                    {
                        extend: 'excel',
                        text:      '<i class="fas fa-file-excel" style="font-size:25px;color:darkgreen;"></i>',
                    }
                ]
            });
        });
    </script>
{% endblock %}