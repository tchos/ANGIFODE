{% extends 'base.html.twig' %}

{% block title %}Liste des reversements{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/css/dataTables.bootstrap4.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="text-center">LISTE DES REVERSEMENTS ENREGISTRES </h3>
        {% for message in app.session.flashBag.get('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
        <hr p-4>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="reversements" class="table table-striped table-hover mt-4">
                        <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>ORGANISME</th>
                            <th>TYPE</th>
                            <th>DATE</th>
                            <th>MONTANT</th>
                            <th>PREUVES</th>
                            <th class="text-end">ACTION</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% set currentPath = path(app.request.attributes.get('_route'),
                            app.request.attributes.get('_route_params')) %}
                        {% for reversement in listeReversements %}
                            {% set organisme = reversement.organisme.sigle %}
                            {% set year = reversement.dateTitre | date('Y') %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ organisme }}</td>
                                <td>{{ reversement.typeRev }}</td>
                                <td>{{ reversement.dateTitre | format_datetime('full', 'none', locale='fr') }}</td>
                                <td>{{ reversement.montantRev }}</td>
                                <td>
                                    <a title="Preuve de reversement"
                                       href="{{ asset("asset/preuves/" ~ organisme ~ "/" ~ year ~ "/" ~ "/" ~ reversement.preuveRev ) }}">
                                        {{ reversement.preuveRev }}
                                    </a>
                                </td>
                                <td class="text-end">
                                    <a title="Modifier le détachement" href="{{ path('reversement_edit', {'id': reversement.id}) }}">
                                        <i class="fas fa-edit"></i><span class="ms-4"></span></a>
                                    <a title="Supprimer le détachement" href="#">
                                        <i class="fa fa-window-close text-danger"></i><span class="ms-4"></span></a>
                                    <a title="Détails du détachement" href="#">
                                        <i class="fas fa-info-circle text-success"></i><span class="ms-4"></span></a>
                                    <a title="Mettre fin au détachement" href="#">
                                        <i class="fas fa-delete-left text-warning"></i><span class="ms-4"></span>
                                    </a>
                                </td>
                            </tr>
                            {% set i = i + 1 %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('asset/js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('asset/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('asset/js/popper.min.js') }}"></script>
    <script src="{{ asset('asset/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('asset/js/dataTables.bootstrap4.min.js') }}"></script>

    <script src="{{ asset('asset/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('asset/js/jszip.min.js') }}"></script>
    <script src="{{ asset('asset/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('asset/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('asset/js/buttons.html5.min.js') }}"></script>

    <script>
        $(document).ready(function(){
            var azemDataTable = $('#reversements').DataTable({
                dom: 'Blfrtip',
                buttons: [
                    {
                        extend: 'copy',
                        text:      '<i class="fas fa-copy" style="font-size:25px;color:blue;"></i>',
                    },
                    {
                        extend: 'pdf',
                        text:      '<i class="fas fa-file-pdf" style="font-size:25px;color:red;"></i>',
                        exportOptions: {
                            columns: [0,1,2] // Column index which needs to export
                        }
                    },
                    {
                        extend: 'csv',
                        text:      '<i class="fas fa-file-alt" style="font-size:25px;color:black;"></i>',
                    },
                    {
                        extend: 'excel',
                        text:      '<i class="fas fa-file-excel" style="font-size:25px;color:darkgreen;"></i>',
                    }
                ]
            });
        });
    </script>
{% endblock %}
